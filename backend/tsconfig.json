{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@Routes/*": ["./src/Routes/*"],
      "@Controllers/*": ["./src/Controllers/*"],
      "@Models/*": ["./src/Models/*"],
      "@Middlewares/*": ["./src/Middlewares/*"],
      "@Utils/*": ["./src/Utils/*"],
      "@gen-prisma/*": ["./prisma/generated/*"],
      "@prisma-client": ["./prisma/client.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
